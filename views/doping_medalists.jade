// Jade file to specify output of a country list
// Inherits from layout
extend layout
block navbarcontent
    +nav_item("/") Home
    +nav_item("/doping_athletes?name=") Doping Athletes by Country
    +nav_item("/statistics") Aggregate Statistics
    +nav_item("/doping_medalists","active") Doping Athletes who Medalled
    +nav_item("/corruption") Corruption Index
    +nav_item("/twitter_feed") Tweets

block content
  h2(align="center")
    |  #{title}:
  // Create a table with one row per result
  form(method="get", action="/doping_medalists")
  p
    table
      tr#title
        td Name
        td Athlete's Home Country
        td Athlete's Home Country Code
        td Olympic Game Location
        td Sport
        td Medal received
        td Year
      - for (var inx = 0; inx < results.length; inx++)
        tr
          td=results[inx].name
          td=results[inx].origin_country
          td=results[inx].code
          td=results[inx].game_location
          td=results[inx].sport
          td=results[inx].medal
          td=results[inx].year
